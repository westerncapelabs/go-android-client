MyScreenManager:
	FreeTextState:
	EndState:
	ChoiceState:

<FreeTextState>:
	name: 'freetextstate'
	BoxLayout:
		orientation: 'vertical'
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		size_hint: 1, 0.6
		spacing: '15dp'
		padding: '20dp'
		BoxLayout:
			orientation: 'horizontal'						
			padding: '5dp'

			canvas:
				Color:
					rgb: .3, .3, .3
				Rectangle:
					pos: self.pos
					size: self.size
			Label:
				text: 'What is adf afkj af lj akj falj falfj aflj alfj alfj aflj aflj dfjalfj alfj jalfkj aflj aflkj falfj af your name afd af af fda fadsf adf adf af azf af af af?'
				text_size: self.size
				halign: 'center'
				valign: 'middle'
		CustomTextInput:
			font_size: '18sp'
			padding: '5dp'
			hint_text: 'Enter text here'
				
		AnchorLayout:
			anchor_x: 'right'
			anchor_y: 'center'
			size_hint_y: 0.5		
			Button:
				text: 'SEND'
				font_size: '18sp'
				size_hint_x: 0.5
				on_release: app.root.current = 'choicestate'

<EndState>:
	name: 'endstate'
	BoxLayout:
		orientation: 'vertical'
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		size_hint: 1, 0.6
		spacing: '15dp'
		padding: '10dp'
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: '48dp'
			padding: '5dp'

			canvas:
				Color:
					rgb: .3, .3, .3
				Rectangle:
					pos: self.pos
					size: self.size
			Label:
				id: end_state_label
				text: 'Thank you for registering!'
				font_size: '20sp'

		Button:
			text: 'FINISH'
			font_size: '18sp'
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			size_hint: 0.5, 0.5
			size_hint_y: None
			on_release: app.root.current = 'freetextstate'
<ChoiceState>:
	name: 'choicestate'
	BoxLayout:
		orientation: 'vertical'
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		size_hint: 1, 0.6
		spacing: '15dp'
		padding: '15dp'
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: '48dp'
			padding: '5dp'

			canvas:
				Color:
					rgb: .3, .3, .3
				Rectangle:
					pos: self.pos
					size: self.size
			Label:
				text: 'Do you prefer tea or coffee?'
				font_size: '20sp'

		Button:
			text: '1. Tea'
			font_size: '18sp'
			size_hint_y: None
		Button:
			text: '2. Coffee'
			font_size: '18sp'
			size_hint_y: None
		Button:
			text: '3. Neither'
			font_size: '18sp'
			size_hint_y: None
			on_release: app.root.current = 'endstate'
